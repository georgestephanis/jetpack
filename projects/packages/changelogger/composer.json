{
	"name": "automattic/jetpack-changelogger",
	"description": "Jetpack Changelogger tool. Allows for managing changelogs by dropping change files into a changelog directory with each PR.",
	"type": "project",
	"license": "GPL-2.0-or-later",
	"keywords": [
		"changelog",
		"keepachangelog",
		"cli",
		"dev"
	],
	"require": {
		"php": ">=7.2.5",
		"composer-runtime-api": "^2.2.0",
		"symfony/console": "^5.4 || ^6.4 || ^7.1",
		"symfony/process": "^5.4 || ^6.4 || ^7.1"
	},
	"require-dev": {
		"yoast/phpunit-polyfills": "^3.0.0",
		"wikimedia/testing-access-wrapper": "^1.0 || ^2.0 || ^3.0",
		"automattic/phpunit-select-config": "@dev"
	},
	"autoload": {
		"psr-4": {
			"Automattic\\Jetpack\\Changelogger\\": "src",
			"Automattic\\Jetpack\\Changelog\\": "lib"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Automattic\\Jetpack\\Changelogger\\Tests\\": "tests/php/includes/src",
			"Automattic\\Jetpack\\Changelog\\Tests\\": "tests/php/includes/lib"
		}
	},
	"bin": [
		"bin/changelogger"
	],
	"scripts": {
		"phpunit": [
			"phpunit-select-config phpunit.#.xml.dist --colors=always"
		],
		"test-coverage": [
			"php -dpcov.directory=. ./vendor/bin/phpunit-select-config phpunit.#.xml.dist --coverage-php \"$COVERAGE_DIR/php.cov\""
		],
		"test-php": [
			"@composer phpunit"
		],
		"post-install-cmd": "rm -f vendor/bin/changelogger && ln -s ../../bin/local-changelogger vendor/bin/changelogger",
		"post-update-cmd": "rm -f vendor/bin/changelogger && ln -s ../../bin/local-changelogger vendor/bin/changelogger"
	},
	"repositories": [
		{
			"type": "path",
			"url": "../*",
			"options": {
				"monorepo": true
			}
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"extra": {
		"autotagger": true,
		"branch-alias": {
			"dev-trunk": "6.0.x-dev"
		},
		"mirror-repo": "Automattic/jetpack-changelogger",
		"version-constants": {
			"::VERSION": "src/Application.php"
		},
		"changelogger": {
			"link-template": "https://github.com/Automattic/jetpack-changelogger/compare/${old}...${new}"
		},
		"dependencies": {
			"test-only": [
				"packages/phpunit-select-config"
			]
		}
	}
}
